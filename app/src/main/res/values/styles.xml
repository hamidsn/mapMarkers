<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WrapContentLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SectionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SectionSeparator" parent="SectionLayout">
        <item name="android:background">#90909090</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="TextBody" parent="WrapContentLayout">
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="TextAppearance.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetItem">
        <item name="android:textSize">20sp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
    </style>

</resources>